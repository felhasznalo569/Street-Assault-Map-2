          <li><a href="/">Maptrocitas</a></li>
          <li><a href="/new">Submit</a></li>
          <li><a href="/koa">What is this?</a></li>
        </ul>
      </div>
    </nav>



    <h3>Register new crime</h3>
    
    <form method="POST" action="/crimes">
      <div class="form-group">
        <div class="row">
          <div class="col-lg-1">
            <label for="name">Name: </label>
            <select class="form-control" name="name" id="name">
              <option value="Robbery">Robbery</option>
              <option value="Violence">Violence</option>
            </select>
          </div>

          <div class="col-lg-1">
            <label for="when">Date: </label>
            <input type="date" class="form-control" name="when" id="when">
          </div>

          <div class="col-lg-1">
            <label for="time">Time: </label>
            <select class="form-control" name="time" id="time">
              <option value="Dawn">Dawn (00:01 - 06:00)</option>
              <option value="Morning">Morning (06:01 - 12:00)</option>
              <option value="Afternoon">Afternoon (12:01 - 18:00)</option>
              <option value="Evening">Evening (18:01 - 24:00)</option>
            </select>
          </div>

          <div class="col-lg-9">
            <label for="description">Descriptcion: </label>
            <input type="text" class="form-control" name="description" placeholder="Description" id="description">
          </div>
        </div>
      </div>

      <div class="form-group">
        <label for="map">Place: </label>
        <div id="map"></div>
      </div>

      <div class="form-group" hidden>
          <div class="row">
            <div class="col-lg-6">
              <label for="latitude">Latitude: </label>
              <input type="text" class="form-control" name="latitude" placeholder="Latitude" id="latitude" required>
            </div>

            <div class="col-lg-6">
              <label for="longitude">Longitude: </label>
              <input type="text" class="form-control" name="longitude" placeholder="Longitude" id="longitude" required>
            </div>
          </div>
        </div>

    <button type="submit" class="btn btn-outline-dark btn-block">Submit</button>
		</form>

		<script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
		<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCbBJPvYIaR5ozIx_0-uWiGeO9cK4IxHww"></script>
		<script type="text/javascript" src="/javascripts/new.js"></script>
  </body>
